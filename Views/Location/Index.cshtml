@model IEnumerable<CarRentalsSystem.Models.ViewModel.LocationViewModel>
@{
    ViewData["Title"] = "Create Location";
    int id = 1;
}

<div class="card">
    <h2>Location</h2>
</div>
 <div class="card-header">
        <a class="btn btn-success" asp-controller="Location" asp-action="Create">Create</a>
    </div>
<table class="table table-bordered">
    <thead>
        <tr style="color:aquamarine">
            <th>Id</th>
            <th> Name</th>
            <th>Address</th>
            <th>CreatedAt</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@(id++)</td>

                <td>@location.Name </td>
                <td>@location.Address</td>

                <td>@location.CreatedAt</td>
                <td>
                    <a class="btn btn-success" asp-action="Delete" asp-route-id="@location.Id">Delete</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@location.Id">Details</a>
                    <a class="btn btn-success" asp-action="Update" asp-route-id="@location.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>