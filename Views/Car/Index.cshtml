@model IEnumerable<CarRentalsSystem.Models.ViewModel.CarViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlateNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreakdownPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Features)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternalImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarPictureUrl)
            </th>
            <th>
                Edit
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Make)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Model)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.PlateNo)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.LocationId)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Price)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.BreakdownPrice)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Features)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.InternalImage)
                </td>
                <td alt="Avatar" class="avatar">
                    @Html.DisplayFor(modelItem => item.CarPictureUrl)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
