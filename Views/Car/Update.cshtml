@model CarRentalsSystem.Models.ViewModel.UpdateCarViewModel
@{ ViewBag.Title = "Update bookings";
}
<div class="row justify-content-center">
    <div class="card">

        <div class="card-header">
            <h1 class="text-center">Update Car Info</h1>
        </div>

        <div class="card-body">

            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Car Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Make" class="control-label">Car Make</label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label">Car Model</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"> Car Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BreakdownPrice" class="control-label">Break down Price</label>
                    <input asp-for="Features" class="form-control" />
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlateNo" class="control-label">Plate No</label>
                    <input asp-for="PlateNo" class="form-control" />
                    <span asp-validation-for="PlateNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Features" class="control-label">Features</label>
                    <input asp-for="Features" class="form-control" />
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select class="form-control" name="CategoryId" asp-items="@ViewBag.Categories"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select class="form-control" name="CategoryId" asp-items="@ViewBag.Location"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InternalImage" class="control-label"></label>
                    <input asp-for="InternalImage" class="form-control" />
                    <span asp-validation-for="InternalImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Select Image</label>
                    <input name="file" type="file" class="form-control" />
                </div>
            </form>

        </div>
    </div>
</div>
   